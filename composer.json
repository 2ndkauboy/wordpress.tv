{
    "require": {
        "wordpress-meta/wptv2": "^2.0",
        "wordpress-meta/wptvblog2": "^2.0",
        "composer/installers": "^2.0@dev"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "extra": {
        "installer-paths": {
            "wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "wp-content/themes/pub/{$name}/": ["type:wordpress-theme"]
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org/"
        },
        {
            "type": "package",
            "package": [
                {
                    "name": "wordpress-meta/wptv2",
                    "type": "wordpress-theme",
                    "version": "2.0",
                    "source": {
                        "type": "svn",
                        "url": "https://meta.svn.wordpress.org/sites/trunk/wordpress.tv/public_html/wp-content/themes/",
                        "reference": "wptv2/"
                    }
                },
                {
                    "name": "wordpress-meta/wptvblog2",
                    "type": "wordpress-theme",
                    "version": "2.0",
                    "source": {
                        "type": "svn",
                        "url": "https://meta.svn.wordpress.org/sites/trunk/wordpress.tv/public_html/wp-content/themes/",
                        "reference": "wptvblog2/"
                    }
                }
            ]
        }
    ]
}
